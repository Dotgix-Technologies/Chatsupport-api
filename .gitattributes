# Enforce LF line endings for all text files
* text=auto eol=lf

# PHP files
*.php text eol=lf

# Blade templates
*.blade.php text eol=lf

# Composer files
composer.json text eol=lf
composer.lock text eol=lf

# Configuration files
*.env text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# CSS and JavaScript files
*.css text eol=lf
*.scss text eol=lf
*.js text eol=lf

# JSON files
*.json text eol=lf

# Markdown files
*.md text eol=lf

# Shell scripts
*.sh text eol=lf

# Ignore binary files from being converted
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.ico binary
*.svg binary
*.webp binary
*.ttf binary
*.woff binary
*.woff2 binary

# Ignore compiled assets
node_modules/* binary
vendor/* binary
public/* binary
storage/* binary
*.log binary

# Databases and SQL files
*.sql text eol=lf
*.sqlite binary

# Ignore any lockfiles or autogenerated files
*.lock text eol=lf
